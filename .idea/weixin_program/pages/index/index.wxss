.header{
  width: 750rpx;
  height: 90rpx;
}
.hdCon{
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.hdCon .logo{
    height: 50rpx;
}
.hdCon image{
  height: 100%;
}
.hdCon .kefu{
   height: 50rpx;
}
.kefu{
  position: relative;
  animation: dh linear 1s infinite alternate;
}
.kefu .btn{
  width: 100%;
  height: 100%;
  position: absolute;
  top:0;
  left: 0;
  opacity: 0;
}
@keyframes dh{
  0%,50%,100%{
    opacity: 1;
  }
  25%{
    opacity: 0;
  }
}
.banner {
  width: 100%;
  height: 295rpx;
}

.banner image{
  width: 100%;
  height: 295rpx;
}
.major navigator image{
  width: 100rpx;
  height: 100rpx;
}
.major{
  font-size: 26rpx;
}
.major navigator{
  text-align: center;
  padding: 0 23rpx;
}
.majorCon{
  display: flex;
  padding: 20rpx 0;
}

.pubTitle{
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  line-height: 60rpx;
  margin-bottom: 20px;
}
.pubTitle .txt{
  font-size: 40rpx;
}
.pubTitle .more{
  font-size: 34rpx;
  color:#666
}
.works{
  background-color: #f0f3f8;
  box-sizing: border-box;
  padding: 50rpx 0 0 0;
}
.works .wkMain .pic{
  width: 340rpx;
  height: 212rpx;
}
.works .wkMain{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.dynamic{
  padding: 90rpx 0;
}