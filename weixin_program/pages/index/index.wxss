.header{
  width: 750rpx;
  height: 90rpx;
}
.hdCon{
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.hdCon .logo{
    height: 50rpx;
}
.hdCon image{
  height: 100%;
}
.hdCon .kefu{
   height: 50rpx;
}
.kefu{
  position: relative;
  animation: dh linear 1s infinite alternate;
}
.kefu .btn{
  width: 100%;
  height: 100%;
  position: absolute;
  top:0;
  left: 0;
  opacity: 0;
}
@keyframes dh{
  0%,50%,100%{
    opacity: 1;
  }
  25%{
    opacity: 0;
  }
}